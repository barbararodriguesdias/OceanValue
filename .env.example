# .env.example
# Copy to .env and fill with your values
# NEVER commit .env file to git

# ===== DATABASE =====
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://oceanvalue_user:password@localhost:5432/oceanvalue_db

# ===== REDIS =====
REDIS_URL=redis://localhost:6379/0

# ===== ENVIRONMENT =====
ENVIRONMENT=development
DEBUG=True

# ===== API SECURITY =====
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== AWS (Optional for production) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=oceanvalue-data
S3_UPLOADS_PATH=uploads/

# ===== MAPBOX (Optional) =====
MAPBOX_TOKEN=your_mapbox_token_here

# ===== SENTRY (Monitoring) =====
SENTRY_DSN=

# ===== EMAIL (Optional for reports) =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/oceanvalue.log

# ===== CORS =====
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
